.box {
  width: 100vw;
  height: 100vw;
  display: flex;
  justify-content: center;
  align-items: center;
}

.screen {
  width: 90%;
  height: 90%;
}

canvas {
  width: 100%;
  height: 100%;
}

.ctrl {
  display: flex;
  flex: 1;
  width: 100%;
  justify-content: space-evenly;
}

.left {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.right {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.row {
  display: flex;
}

.block {
  width: 45px;
  height: 45px;
}